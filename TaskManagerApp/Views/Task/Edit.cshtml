@{
    ViewData["Title"] = "Edit";
    Layout = "_LayoutList";
}
<head>

</head>
<body>
    <div class="card">
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
        <div class="card-footer text-muted">
            <div class="card-body">
                <div class="card-footer text-muted">
                    <div class="card-header"><i class="bi bi-cloud"></i> @ViewBag.Edited.Id</div>
                    <div class="card-body">
                        <h4 class="card-title">Task Title</h4>
                        <h6 class="card-subtitle text-muted">@ViewBag.Edited.Title</h6>
                        <div class="card border-dark mb-3" style="max-width: 20rem;">
                        </div>
                        <h4 class="card-title">Description</h4>
                        <div class="card-header">@ViewBag.Edited.Description</div>
                        <p></p>
                        <div class="container">
                            <div class="options">
                                <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
                                    <div class="toast-header">
                                        <strong class="me-auto">Completed</strong>
                                        <small>@ViewBag.Edited.Priority</small>
                                    </div>
                                    <div class="toast-body">
                                        @ViewBag.Edited.IsCompleted
                                        <div class="card border-light mb-3" style="max-width: 20rem;">
                                        </div>
                                        <small><i class="bi bi-calendar4-week"> </i>@ViewBag.Edited.DueDate</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            Edit
        </div>
    </div>
    <form asp-controller="Task" asp-action="EditTask">
        <div class="card">
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width:0%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="card-footer text-muted">
                <div class="card-body">
                    <div class="card-footer text-muted">
                        <div class="card-header"> <input type="text" class="form-control" id="id" name="id" value="@ViewBag.Edited.Id" required readonly></div>
                        <div class="card-body">
                            <h6 class="card-subtitle text-muted">Title</h6>
                            <input class="form-control form-control-sm" type="text" value="@ViewBag.Edited.Title" id="title" name="title" required>
                            <br />
                            <h6 class="card-subtitle text-muted">Description</h6>
                            <input class="form-control form-control-sm" type="text" value="@ViewBag.Edited.Description" id="description" name="description" required>
                            <br />
                            <h6 class="card-subtitle text-muted">Due Date</h6>
                            <input class="form-control form-control-sm" type="date" value="@ViewBag.Edited.DueDate" id="DueDate" name="DueDate" required min="@DateTime.Now.ToString("yyyy-MM-dd")">
                            <br />
                            <h6 class="card-subtitle text-muted">Completed</h6>
                            <div class="group">
                                <select class="form-select" id="iscompleted" name="iscompleted" value="@ViewBag.Edited.IsCompleted" required>
                                    <option value="No">No</option>
                                    <option value="Yes">Yes</option>
                                </select>
                            </div>
                            <br />
                            <h6 class="card-subtitle text-muted">Priority</h6>
                            <div class="group">
                                <select class="form-select" id="priority" name="priority" value="@ViewBag.Edited.Priority" required>
                                    <option value="Low">Low</option>
                                    <option value="Medium">Medium</option>
                                    <option value="High Priority">High Priority</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="card border-dark mb-3" style="max-width: 20rem;">
                    </div>
                </div>
            </div>
            <div class="card-footer text-muted">
                <button type="submit" class="btn btn-primary" style="width: 400px; align-content:center; margin:auto;  align-items: center;">Save</button>
            </div>
        </div>
    </form>
</body>