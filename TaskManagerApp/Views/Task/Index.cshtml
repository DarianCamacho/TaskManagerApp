@{
    ViewData["Title"] = "Index";
}
<head>

</head>
<body>
    <figure class="text-center">
        <blockquote class="blockquote">
            <p class="mb-0 gradient-text">Ingresa los detalles de tu nueva tarea</p>
        </blockquote>
        <figcaption class="blockquote-footer">
            DCD
        </figcaption>
    </figure>
    <form asp-controller="Task" asp-action="Create">
        <div class="card border-light mb-3" style="max-width: 800px; margin:auto;">
            <div class="progress">
                <div class="progress-bar bg-info" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="card-header"><i class="bi bi-braces"></i></div>
            <div class="card-body">
                <h4 class="card-title">Create a new task</h4>
                <div class="form-group">
                    <label class="col-form-label mt-4" for="title">Title</label>
                    <input type="text" class="form-control" placeholder="Title" id="Title" name="title" required>
                </div>
                <div class="form-group">
                    <label class="col-form-label mt-4" for="description">Description</label>
                    <input type="text" class="form-control" placeholder="What is your new task about?" id="description" name="description" required>
                </div>
                <div class="form-group">
                    <label class="col-form-label mt-4" for="duedate">Due Date</label>
                    <input type="date" class="form-control" id="duedate" name="duedate" required min="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div class="form-group">
                    <label class="col-form-label mt-4" for="description">Completed</label>
                    <input type="text" class="form-control" value="No" id="iscompleted" style="color:black" name="iscompleted" required readonly>
                </div>
                <fieldset class="form-group">
                    <legend class="mt-4">Priority</legend>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="priority" id="priority" value="Low" checked="">
                        <label class="form-check-label" for="priority">
                            Low <i class="bi bi-emoji-smile"></i>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="priority" id="priority" value="Medium">
                        <label class="form-check-label" for="priority">
                            Medium <i class="bi bi-emoji-neutral"></i>
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="priority" id="priority" value="High Priority">
                        <label class="form-check-label" for="priority">
                            High Priority <i class="bi bi-emoji-dizzy"></i>
                        </label>
                    </div>
                </fieldset>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
    <br />
</body>